[user]
    name = Jonas Minor
    email = github@nc.seltsam.net

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[include]
    path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
    true-color = always
    features = catppuccin-mocha
    navigate = true # n and N to move between diff sections
    hyperlinks = false
    side-by-side = true

[alias]
    lg = log --graph --branches --remotes --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    mergetool = !nvim -c DiffviewOpen

[rebase]
    stat = true

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[pull]
    rebase = true

[push]
    autoSetupRemote = true
    default = simple

[init]
    defaultBranch = main

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
